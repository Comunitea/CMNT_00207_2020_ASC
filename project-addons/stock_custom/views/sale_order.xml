<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_order_form_stock_custom">
        <field name="name">sale.order.form.stcok.custom</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_cancel']" position="after">
                <field name="ready_to_send" invisible="1"/>
                <button name="set_ready_to_send_pick_status" attrs="{'invisible': [('ready_to_send', '=', True)]}" context="{'ready_to_send': True}" states="sale" type="object" string="Ready PDA"/>
                <button name="set_ready_to_send_pick_status" attrs="{'invisible': [('ready_to_send', '=', False)]}" context="{'ready_to_send': False}" states="sale" type="object" string="Not ready PDA"/>
            </xpath>
        </field>
    </record>
</odoo>
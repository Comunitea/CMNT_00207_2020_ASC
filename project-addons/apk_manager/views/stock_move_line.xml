<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_move_line_form" model="ir.ui.view">
        <field name="name">stock.move.line.form</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date']/../.." position="after">
                <group string="Apk Values">
                    <group>
                        <field name="box_id"/>
                        <field name="apk_state"/>
                        <field name="removal_priority"/>
                        <field name="removal_dest_priority"/>
                    </group>
                    <group>
                        <field name="need_location_dest_id"/>
                        <field name="need_location_id"/>
                        <field name="need_confirm_lot_id"/>
                        <field name="need_confirm_product_id"/>
                        <field name="need_loc_before_qty"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>

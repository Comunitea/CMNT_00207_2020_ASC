    <record id="stock_serial_line_wzd_tree" model="ir.ui.view">
        <field name="name">stock.serioal.line.wzd.line.tree</field>
        <field name="model">serial.line.wzd</field>
        <field name="arch" type="xml">
            <tree string="Stock Inventory Lines" editable="bottom"
            decoration-muted="to_delete == True">
                <field name="line_id" invisible="1"/>
                <field name="product_id" invisible="1"/>
                <field name="location_id" invisible="1"/>
                <field name="name"/>
                <field name="serial_id" invisible="1"/>
                <field name="to_delete" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>



    <record id="stock_serial_inventory_line_tree" model="ir.ui.view">
        <field name="name">stock.serial_inventory.line.tree</field>
        <field name="model">stock.serial.inventory.line</field>
        <field name="arch" type="xml">
            <tree string="Stock Inventory Lines">
                <field name="product_id"/>
                <field name="location_id"/>
                <field name="serial_ids"/>
            </tree>
        </field>
    </record>


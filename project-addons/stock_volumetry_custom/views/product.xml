<?xml version="1.0" encoding="utf-8"?>
<odoo>
     
     <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.common.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='volume']" position="attributes">
                    <attribute name="digits">[42,5]</attribute>
                </xpath>
                <xpath expr="//div/field[@name='volume']/.." position="after">
                   
                    <label for="volume_factor" attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"/>
                    <div class="o_row" name="volume" volume_factor="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}">
                        <field name="volume_factor" string="Volume Factor"/>
                        <span>%</span>
                    </div>
                    <label for="volume_packed_factor" attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"/>
                    <div class="o_row" name="volume" volume_packed_factor="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}">
                        <field name="volume_packed_factor" string="Volume Packed Factor"/>
                        <span>%</span>
                    </div>
                </xpath>

            </field>
    </record>
    <record id="product_variant_easy_edit_view" model="ir.ui.view">
            <field name="name">product.product.view.form.easy</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='volume']" position="attributes">
                    <attribute name="digits">[42,5]</attribute>
                </xpath>
                <xpath expr="//div/field[@name='volume']/.." position="after">
                    
                    <label for="volume_factor"/>
                    <div class="o_row">
                        <field name="volume_factor"/>
                        <span>%</span>
                    </div>
                    <label for="volume_packed_factor"/>
                    <div class="o_row">
                        <field name="volume_packed_factor"/>
                        <span>%</span>
                    </div>
                </xpath>

            </field>
    </record>
    
</odoo>
   
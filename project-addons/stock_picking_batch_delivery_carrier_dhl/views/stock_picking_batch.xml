<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- stock.picking Form View -->
    <record id="stock_picking_batch_delivery_carrier_dhl_form" model="ir.ui.view">
        <field name="name">stock.picking.batch.delivery.carrier.dhl</field>
        <field name="model">stock.picking.batch</field>
        <field name="inherit_id" ref="stock_picking_batch_delivery_carrier_base.stock_picking_batch_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <field name="tracking_code" position="after">
                <field name="daily_picking" attrs="{'invisible': [('carrier_code', '!=', 'DHL')]}"/>
                    <field name="picking_time" 
                        attrs="{'invisible': ['|', ('carrier_code', '!=', 'DHL'), 
                        ('daily_picking', '=', False)]}"/>
            </field>
        </field>
    </record>

    <record id="cmnt_delivery_carrier_dhl_carrier_account" model="ir.ui.view">
        <field name="name">cmnt.delivery.carrier.dhl.carrier.account</field>
        <field name="model">carrier.account</field>
        <field name="inherit_id" ref="base_delivery_carrier_label.carrier_account_view_form"/>
        <field name="arch" type="xml">
            <field name="account" position="after">
                <field name="dhl_account" attrs="{'invisible': [('delivery_carrier', '!=', 'dhl')]}"/>
                <field name="dhl_label_template" attrs="{'invisible': [('delivery_carrier', '!=', 'dhl')]}"/>
            </field>
        </field>
    </record>

</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- stock.picking Form View -->
    <record id="stock_picking_batch_delivery_carrier_mrw_form" model="ir.ui.view">
        <field name="name">stock.picking.batch.delivery.carrier.mrw</field>
        <field name="model">stock.picking.batch</field>
        <field name="inherit_id" ref="stock_picking_batch_delivery_carrier_base.stock_picking_batch_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <field name="tracking_code" position="after">
                <field name="mrw_franchise_delivery" attrs="{'invisible': [('carrier_code', '!=', 'MRW')]}"/>
                <field name="mrw_service" attrs="{'invisible': [('carrier_code', '!=', 'MRW')]}"/>
                <field name="mrw_frequency" attrs="{'invisible': [('carrier_code', '!=', 'MRW')]}"/>
                <field name="mrw_saturday_delivery" attrs="{'invisible': [('carrier_code', '!=', 'MRW')]}"/>
                <field name="mrw_830_delivery" attrs="{'invisible': [('carrier_code', '!=', 'MRW')]}"/>
                <field name="mrw_delivery_hangle" attrs="{'invisible': [('carrier_code', '!=', 'MRW')]}"/>
                <field name="mrw_delivery_return" attrs="{'invisible': [('carrier_code', '!=', 'MRW')]}"/>
                <field name="mrw_instant_notice" attrs="{'invisible': [('carrier_code', '!=', 'MRW')]}"/>
                <field name="mrw_delivery_refund" attrs="{'invisible': [('carrier_code', '!=', 'MRW')]}"/>
                <field name="mrw_refund_quantity" attrs="{'invisible': [('carrier_code', '!=', 'MRW')]}"/>
                <field name="mrw_goods_type" attrs="{'invisible': [('carrier_code', '!=', 'MRW')]}"/>
                <field name="mrw_declared_value" attrs="{'invisible': [('carrier_code', '!=', 'MRW')]}"/>
                <field name="mrw_mail_notification" attrs="{'invisible': [('carrier_code', '!=', 'MRW')]}"/>
                <field name="mrw_phone_notification" attrs="{'invisible': [('carrier_code', '!=', 'MRW')]}"/>
                <field name="mrw_notice_type" attrs="{'invisible': [('carrier_code', '!=', 'MRW')]}"/>
                <field name="mrw_delivery_insurance" attrs="{'invisible': [('carrier_code', '!=', 'MRW')]}"/>
                <field name="mrw_insurance_value" attrs="{'invisible': [('carrier_code', '!=', 'MRW')]}"/>
            </field>

            <button name="cancel_shipment" position="attributes">
                <attribute name="invisible">[('carrier_code', '=', 'MRW')]</attribute>
            </button>

            <button name="track_request" position="attributes">
                <attribute name="invisible">[('carrier_code', '=', 'MRW')]</attribute>
            </button>
        </field>
    </record>

    <record id="cmnt_delivery_carrier_mrw_carrier_account" model="ir.ui.view">
        <field name="name">cmnt.delivery.carrier.dhl.carrier.account</field>
        <field name="model">carrier.account</field>
        <field name="inherit_id" ref="base_delivery_carrier_label.carrier_account_view_form"/>
        <field name="arch" type="xml">
            <field name="account" position="after">
                <field name="mrw_account" attrs="{'invisible': [('delivery_carrier', '!=', 'mrw')]}"/>
                <field name="mrw_franchise" attrs="{'invisible': [('delivery_carrier', '!=', 'mrw')]}"/>
            </field>
        </field>
    </record>

</odoo>
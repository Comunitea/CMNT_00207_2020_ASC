<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="base.paperformat_euro" model="report.paperformat">
        <field name="name">A4</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">28</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">39</field>
        <field name="dpi">90</field>
    </record>

    <template id="report_purchaseorder_document" name="Custom Document Purchase Order A-sec" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//t[@t-set='o']" position="after">
            <t t-set="type" t-value="'purchase'"/>
        </xpath>
    </template>

    <template id="report_picking" name="Custom Document Stock Picking A-sec" inherit_id="stock.report_picking">
        <xpath expr="//div[hasclass('page')]" position="after">
            <t t-set="type" t-value="'picking'"/>
        </xpath>
    </template>

    <template id="report_delivery_document" name="Custom Document Delivery Document A-sec" inherit_id="stock.report_delivery_document">
        <xpath expr="//t[@t-set='o']" position="after">
            <t t-set="type" t-value="'delivery'"/>
        </xpath>
    </template>

    <template id="report_repairorder" name="Custom Document Repair Document A-sec" inherit_id="repair.report_repairorder">
        <xpath expr="//t[@t-set='o']" position="after">
            <t t-set="type" t-value="'repair'"/>
        </xpath>
    </template>

    <template id="report_purchasequotation_document" name="Custom Document Quotation A-sec" inherit_id="purchase.report_purchasequotation_document">
        <xpath expr="//t[@t-set='o']" position="after">
            <t t-set="type" t-value="'quotation'"/>
        </xpath>
    </template>

    <template id="report_saleorder_document" name="Custom Document Sale Order A-sec" inherit_id="sale.report_saleorder_document">
        <xpath expr="//t[@t-set='doc']" position="after">
            <t t-if="is_pro_forma == True">
                <t t-set="type" t-value="'proforma_invoice'"/>
            </t>
            <t t-else="">
                <t t-set="type" t-value="'sale_order'"/>
            </t>
        </xpath>
    </template>

    <template id="report_invoice_document" name="Custom Document Sale Order ProForma A-sec" inherit_id="account.report_invoice_document">
        <xpath expr="//t[@t-set='o']" position="after">
            <t t-set="type" t-value="'invoice'"/>
        </xpath>
    </template>

    <template id="report_invoice_document_with_payments" name="Custom Document Sale Order ProForma A-sec" inherit_id="account.report_invoice_document_with_payments">
        <xpath expr="//t[@t-set='o']" position="after">
            <t t-set="type" t-value="'invoice'"/>
        </xpath>
    </template>

    <template id="external_layout_standard" name="Custom Document External Layout Standard" inherit_id="web.external_layout_standard">
        <xpath expr="//div[hasclass('header')]" position="replace">
            <div class="header">
                <div class="row">
                    <div class="col-7" style="padding-top:80px; padding-bottom: 10px;  background-color: #e5e5e5; color: #23384d; text-transform: uppercase; text-align: center;font-weight: bold;">
                        <div class="col-12" style="margin-top: 5px;">
                            <div class="col-4" style="float: left; text-align: right;">
                                <img t-if="'team_id' in o and o.team_id.team_logo" t-att-src="image_data_uri(o.team_id.team_logo)" style="max-height: 40px;" alt="Logo"/>
                                <img t-elif="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 40px;" alt="Logo"/>
                            </div>
                            <div class="col-8" style="float: left; text-align: left;">
                                <span t-if="'team_id' in o and o.team_id.team_name" t-esc="o.team_id.team_name" style="font-size: 20px;letter-spacing: 3.2px; margin-left: 1%;"/>
                                <span t-elif="company.name" t-esc="company.name" style="font-size: 20px;letter-spacing: 3.2px; margin-left: 1%;"/>
                            </div>
                            <div class="col-7 offset-1" style="float: left; text-align: left;">
                                <small t-if="'team_id' in o and o.team_id.team_tag_line" t-esc="o.team_id.team_tag_line" style="float: left;text-align: left;margin-top: -1.5%;"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-5" style="padding-top:80px; padding-bottom: 10px; background-color: #23384d; color: #fafaf8;font-size: 25px; font-size-adjust: 1; text-transform: uppercase; text-align: center;font-weight: bold;">
                        <span t-if="type == 'invoice'">Invoice</span>
                        <span t-if="type == 'sale_order'">Sales Order</span>
                        <span t-if="type == 'proforma_invoice'">PRO-FORMA Invoice</span>
                        <span t-if="type == 'picking'">Picking</span>
                        <span t-if="type == 'quotation'">Quotation</span>
                        <span t-if="type == 'repair'">Repair Order</span>
                        <span t-if="type == 'delivery'">Delivery</span>
                        <span t-if="type == 'purchase'">Purchase</span>
                        <br t-else=""/>
                    </div>
                </div>
            </div>
        </xpath>
    </template>


    <!-- Templates for internal layout -->

    <template id="internal_layout" name="Custom Document Internal Layout" inherit_id="web.internal_layout">
        <xpath expr="//div[hasclass('header')]" position="replace">
            <div class="header">
                <div class="row">
                    <div class="col-7" style="padding-top:80px; padding-bottom: 10px;  background-color: #e5e5e5; color: #23384d; text-transform: uppercase; text-align: center;font-weight: bold;">
                        <div class="col-12" style="margin-top: 5px;">
                            <div class="col-4" style="float: left; text-align: right;">
                                <img t-if="'team_id' in o and o.team_id.team_logo" t-att-src="image_data_uri(o.team_id.team_logo)" style="max-height: 40px;" alt="Logo"/>
                                <img t-elif="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 40px;" alt="Logo"/>
                            </div>
                            <div class="col-8" style="float: left; text-align: left;">
                                <span t-if="'team_id' in o and o.team_id.team_name" t-esc="o.team_id.team_name" style="font-size: 20px;letter-spacing: 3.2px; margin-left: 1%;"/>
                                <span t-elif="company.name" t-esc="company.name" style="font-size: 20px;letter-spacing: 3.2px; margin-left: 1%;"/>
                            </div>
                            <div class="col-7 offset-1" style="float: left; text-align: left;">
                                <small t-if="'team_id' in o and o.team_id.team_tag_line" t-esc="o.team_id.team_tag_line" style="float: left;text-align: left;margin-top: -1.5%;"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-5" style="padding-top:80px; padding-bottom: 10px;  background-color: #23384d; color: #fafaf8;font-size: 25px; font-size-adjust: 1; text-transform: uppercase; text-align: center;font-weight: bold;">
                        <ul class="list-inline">
                            <li class="list-inline-item"><span class="page"/></li>
                            <li class="list-inline-item">/</li>
                            <li class="list-inline-item"><span class="topage"/></li>
                        </ul>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

</odoo>
